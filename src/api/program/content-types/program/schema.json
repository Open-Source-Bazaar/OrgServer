{
  "kind": "collectionType",
  "collectionName": "programs",
  "info": {
    "singularName": "program",
    "pluralName": "programs",
    "displayName": "Program"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "start_time": {
      "type": "datetime",
      "required": true
    },
    "end_time": {
      "type": "datetime",
      "required": true
    },
    "summary": {
      "type": "text",
      "unique": true,
      "minLength": 5
    },
    "mentors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "activity": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::activity.activity"
    },
    "type": {
      "type": "enumeration",
      "enum": ["lecture", "workshop", "exhibition"],
      "required": true
    },
    "place": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::place.place"
    },
    "accounts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::account.account"
    },
    "documents": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos", "files"]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "organization": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::organization.organization"
    },
    "live_link": {
      "type": "string",
      "minLength": 10
    },
    "project": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::project.project"
    }
  }
}
